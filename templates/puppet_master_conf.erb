[master]
ca = <%= @ca %>
<% if @puppetdb -%>
storeconfigs = true
storeconfigs_backend = puppetdb
<% end -%>
<% if defined?(@dns_alt_names) -%>
<% dns_alt_names =  @dns_alt_names.join(',') %>
dns_alt_names = <%= dns_alt_names %>
<% end -%>
#Needed for passenger support
ssl_client_header = SSL_CLIENT_S_DN
ssl_client_verify_header = SSL_CLIENT_VERIFY

<% if @options.has_key?('environment') %>
<% environment = @options['environment'] %>
environment = <%= environment %>
<% end -%>
<% if @options.has_key?('modulepath') %>
<% modulepath = @options['modulepath'].join(':') %>
modulepath = <%= modulepath %>
<% end -%>
<% if @options.has_key?('manifest') -%>
manifest = <%= options['manifest'] %>
<% end -%>
